package cn.e3mall.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import cn.e3mall.common.pojo.EasyUITreeNode;
import cn.e3mall.common.utils.E3Result;
import cn.e3mall.content.service.ContentCateGoryService;
import cn.e3mall.pojo.TbContentCategory;
/**
 * 内容分类管理Controller
 * @author yang
 *
 */
@Controller
public class ContentCatController {

	@Autowired 
	private ContentCateGoryService contentCateGoryService;
	
	/**
	 * 获取内容分类菜单，
	 * 展示层是一个树形结构
	 */
	@RequestMapping("/content/category/list")
	@ResponseBody
	public List<EasyUITreeNode> getContentCatList(@RequestParam(name="id",defaultValue="0") Long parentId){		
		return contentCateGoryService.getContentCatList(parentId);
	}
	
	/**
	 * 在分类菜单中新增一条数据（新增一个菜单的叶子节点）
	 * @param parentId	父节点id
	 * @param name		该子节点的名字。
	 * @return			e3Result ; 封装参数，
	 */
	@RequestMapping(name="/content/category/create" ,method=RequestMethod.POST)
	@ResponseBody
	public E3Result createContentCategory(Long parentId , String name){
		E3Result e3Result = contentCateGoryService.addContentCategor(parentId, name);
		TbContentCategory category = (TbContentCategory) e3Result.getData();
		for (int i = 0; i <10; i++) {			
			System.out.println(category.getId()+"---------------- 是该子节点的id");
		}
		
	return e3Result;
		
	}
	/**
	 * 删除节点 ， 如果该节点是叶子节点或者是只包含叶子节点的父节点，就允许删除。
	 * 如果该节点中包含父节点就不允许删除
	 * @param id
	 */
	@RequestMapping("/content/category/delete/")
	public void  deleteeContentCatgory(Long id){
		
		int i = contentCateGoryService.deleteeContentCatgory(id);
			
	}
}
